<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:hkui="http://schemas.android.com/apk/res-auto"
    style="@style/image_item_stytle"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="5dp"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:paddingTop="5dp" >

    <RelativeLayout
        android:layout_width="380px"
        android:layout_height="198px" >
        
        <ImageView
            android:id="@+id/item_photo"
            android:layout_width="380px"
            android:layout_height="198px"
            android:gravity="center"
            android:scaleType="centerCrop"
            android:src="@drawable/image_icon_default"/>
        
        <ImageView android:id="@+id/item_select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:visibility="gone"
            android:src="@drawable/music_selected_icon" />
        
        <LinearLayout 
            android:layout_width="380px"
            android:layout_height="80px"
            android:background="@color/hk_backgroup_view"
            android:layout_alignBottom="@+id/item_photo"
            android:orientation="vertical"
            android:gravity="center_vertical">
            
            <haoke.ui.util.HKTextView 
                android:id="@+id/item_filename"
                android:layout_width="380px"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:marqueeRepeatLimit="3"
                android:ellipsize="marquee"
                android:scrollHorizontally="true"
                android:textSize="20dp"
                android:text="ABCDEFG"
                android:singleLine="true"/>
            
            <TextView
                android:id="@+id/image_from_text"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textColor="@android:color/white"
                android:textSize="14dp"
                android:visibility="gone" />
        </LinearLayout>
    
    </RelativeLayout>

</LinearLayout>