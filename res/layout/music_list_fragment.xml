<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:hkui="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include
        android:id="@+id/music_list_tab_id" 
        layout="@layout/music_list_tab"/>

    <!-- 列表 -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="455px" >

        <ListView
            android:id="@+id/music_list_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:descendantFocusability="blocksDescendants"
            android:fadeScrollbars="false"
            android:divider="@drawable/music_list_divider"  
			android:dividerHeight="1px"
            android:listSelector="@android:color/transparent" />

    </RelativeLayout>

</LinearLayout>