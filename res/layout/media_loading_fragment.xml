<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:hkui="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:id="@+id/media_loading_imageview"
        android:layout_width="390px"
        android:layout_height="390px"
        android:layout_centerInParent="true"
        android:src="@drawable/media_loading_anim"
        android:visibility="visible" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true" >

        <ImageView
            android:id="@+id/media_loading_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:src="@drawable/music_loading_usb" />

        <TextView
            android:id="@+id/media_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/media_loading_img"
            android:layout_centerHorizontal="true"
            android:ellipsize="end"
            android:gravity="center"
            android:textColor="#FFFFFF"
            android:textSize="22sp" />
    </RelativeLayout>

</RelativeLayout>