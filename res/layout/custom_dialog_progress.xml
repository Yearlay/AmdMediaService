<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/pub_dialog_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/pub_msgbox_bg1" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="15px"
        android:gravity = "center"
        android:orientation="vertical" >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="68px"
            android:gravity="center" >
            <TextView
                android:id="@+id/pub_dialog_title"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/music_error_title"
                android:textColor="#FFFFFF"
                android:textSize="22dp" />
        </LinearLayout>

        <View
            android:layout_width="645px"
            android:layout_height="2px"
            android:layout_marginLeft="15px"
            android:layout_marginRight="15px"
            android:alpha="0.1"
            android:background="@android:color/white" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="250px"
            android:orientation="vertical"
            android:gravity="center" >

            <ImageView
                android:id="@+id/progress_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/file_operate_loading_anim" />
            
            <TextView
                android:id="@+id/pub_dialog_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/progress_view"
                android:layout_gravity="center_horizontal"
                android:textColor="#FFFFFF"
                android:textSize="22dp" />

        </LinearLayout>
    </LinearLayout>

</FrameLayout>