<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/pub_dialog_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/pub_msgbox_bg1" >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity = "center"
        android:orientation="vertical" >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="68px"
            android:gravity="center" >
            <TextView
                android:id="@+id/pub_dialog_title"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/music_error_title"
                android:textColor="#FFFFFF"
                android:textSize="22dp" />
        </LinearLayout>

        <View
            android:layout_width="645px"
            android:layout_height="2px"
            android:layout_marginTop="0px"
            android:alpha="0.1"
            android:background="@android:color/white" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="202px"
            android:gravity="center" >
            <TextView
                android:id="@+id/pub_dialog_text"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:gravity="center"
	            android:ellipsize="end"
	            android:textSize="22sp"
	            android:textColor="#FFFFFF"  >
            </TextView>
        </LinearLayout>
        
        <View
            android:layout_width="645px"
            android:layout_height="2px"
            android:layout_marginTop="0px"
            android:alpha="0.1"
            android:background="@android:color/white" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="80px"
            android:gravity="center" >
            <!-- 确定按钮 -->
            <Button
                android:id="@+id/pub_dialog_ok"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:paddingTop="18px"
                android:paddingBottom="18px"
                android:background="@drawable/bd_dialog_button"
                android:text="@string/music_dialog_btn_ok"
                android:textColor="@color/bd_text_down"
                android:textSize="22dp" />
        </LinearLayout>
    </LinearLayout>

</FrameLayout>