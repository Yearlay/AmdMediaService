<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:hkui="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" >

    <!-- 图片大图 -->
    <LinearLayout
        android:id="@+id/image_big_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30px"
        android:layout_weight="1"
        android:gravity="center" >
        <ImageView
            android:id="@+id/image_detail_icon"
            android:layout_width="412px"
            android:layout_height="412px"
            android:gravity="center"
            android:scaleType="centerCrop"
            android:background="@drawable/image_details_img" />
    </LinearLayout>

    <!-- 图片详细信息 -->
    <LinearLayout
        android:id="@+id/item_details_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30px"
        android:layout_weight="1"
        android:orientation="vertical" >
        <!-- 图片标题 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >
            <haoke.ui.util.HKTextView
                android:id="@+id/image_detail_title"
                style="@style/image_details_stytle"
                android:text="@string/image_detail_title"
                android:textSize="26dp" />
        </LinearLayout>

        <!-- 图片占用空间 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >
            <haoke.ui.util.HKTextView
                android:id="@+id/image_detail_space"
                style="@style/image_details_stytle"
                android:text="@string/image_detail_size" />
        </LinearLayout>

        <!-- 图片尺寸 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >
            <haoke.ui.util.HKTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/hk_custom_text"
                android:text="@string/image_detail_rect"
                android:textSize="24dp" />
            <haoke.ui.util.HKTextView
                android:id="@+id/image_detail_rect"
                style="@style/image_details_stytle"
                android:text="@string/image_detail_rect" />
        </LinearLayout>

        <!-- 图片路径 -->
        <LinearLayout
            android:id="@+id/image_detail_path_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >
            <haoke.ui.util.HKTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/hk_custom_text"
                android:text="@string/image_detail_path"
                android:textSize="24dp" />
            <haoke.ui.util.HKTextView
                android:id="@+id/image_detail_path"
                style="@style/image_details_stytle"
                android:text="@string/image_detail_path" />
        </LinearLayout>

        <!-- 图片种类 -->
        <LinearLayout
            android:id="@+id/image_detail_path_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
                android:layout_marginTop="50px"
            android:orientation="horizontal" >
            <haoke.ui.util.HKTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/hk_custom_text"
                android:text="@string/image_detail_style"
                android:textSize="24dp" />
            <haoke.ui.util.HKTextView
                android:id="@+id/image_detail_style"
                style="@style/image_details_stytle"
                android:text="@string/image_detail_style" />
        </LinearLayout>

        <!-- 图片大小 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >
            <haoke.ui.util.HKTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/hk_custom_text"
                android:text="@string/image_detail_space"
                android:textSize="24dp" />
            <haoke.ui.util.HKTextView
                android:id="@+id/image_detail_size"
                style="@style/image_details_stytle"
                android:text="@string/image_detail_space" />
        </LinearLayout>

        <!-- 图片最近修改时间 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >
            <haoke.ui.util.HKTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/hk_custom_text"
                android:text="@string/image_detail_settime"
                android:textSize="24dp" />
            <haoke.ui.util.HKTextView
                android:id="@+id/image_detail_settime"
                style="@style/image_details_stytle"
                android:text="@string/image_detail_settime" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>